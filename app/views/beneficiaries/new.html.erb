<section class="container-fluid p-5">
    <div class="row h-100 justify-content-around">

        <div class="col-8 bg-whitesmoke p-0 border rounded">


            <div class="d-flex  bg-whitesmoke-titles"><p class="display-3 fw-lighter mx-auto my-auto">Cadastrar Beneficiário</p></div>
            <div class="container p-5">
                <div class="row">
                    <%= form_with model: @beneficiary do |form| %>
                    <div class="form-group mb-4">
                        <%= form.label :name, value: "Nome Completo" %><br>
                        <%= form.text_field :name, class: "form-control" %>
                        <% @beneficiary.errors.full_messages_for(:name).each do |message| %>
                        <div><%= message %></div>
                        <% end %>
                    </div>
                    <div class="form-group mb-4">
                        <%= form.label :contact_number, value: "Número de Contato" %><br>
                        <%= form.text_field :contact_number, class: "form-control " %>
                        <% @beneficiary.errors.full_messages_for(:contact_number).each do |message| %>
                        <div><%= message %></div>
                        <% end %>
                    </div>
                    <div class="form-group mb-4">
                        <%= form.label :identification_document, value: "Documento de Identificação" %><br>
                        <%= form.text_field :identification_document, class: "form-control " %>
                        <% @beneficiary.errors.full_messages_for(:identification_document).each do |message| %>
                        <div><%= message %></div>
                        <% end %>
                    </div>
                    <div class="form-group mb-4">
                        <%= form.label :identification_document, value: "Tipo de Contrato" %><br>
                        <%= form.select :contract_type, options_for_select([['Contratado', 'contratado'], ['Efetivo', 'efetivo']], selected: @beneficiary.contract_type), {}, class: "form-control form-select" %>                        
                        <% @beneficiary.errors.full_messages_for(:contract_type).each do |message| %>
                        <div><%= message %></div>
                        <% end %>
                    </div>
                    <div >
                        <%= form.submit:Cadastrar, class: "btn btn-secondary"  %>
                    </div>
                    <% end %>



                </div>
            </div>

        </div>
    </div>
</section>